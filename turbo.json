{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"]
		},
		"migrate": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"]
		},
		"e2e": {
			"dependsOn": ["^build"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		}
	}
}
